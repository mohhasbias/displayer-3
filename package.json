{
  "name": "sparify",
  "version": "1.0.0",
  "description": "Boilerplate for single page application powered by browserify",
  "main": "app/app.js",
  "scripts": {
    "test": "eslint .",
    "dev": "budo app/app.js:dist/bundle.js --host localhost --live --open --pushstate",
    "build": "browserify app/app.js -o dist/bundle.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browserify-postcss": "^0.3.3",
    "browserify-shim": "^3.8.14",
    "budo": "^9.4.7",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-import": "^9.1.0",
    "postcss-modules": "^0.6.4",
    "postcss-reporter": "^3.0.0",
    "postcss-sass-colors": "^0.1.1",
    "postcss-url": "^5.1.2",
    "precss": "^1.4.0"
  },
  "dependencies": {
    "animate.css": "^3.5.2",
    "basename": "^0.1.2",
    "bootstrap": "^3.3.7",
    "bootstrap-3-typeahead": "^4.0.2",
    "browserify-mime": "^1.2.9",
    "diffhtml": "^0.9.2",
    "ekko-lightbox": "^5.1.1",
    "es6-promise": "^4.1.0",
    "font-awesome": "^4.7.0",
    "holderjs": "^2.9.4",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.2.1",
    "keycode-js": "0.0.4",
    "object-assign": "^4.1.1",
    "page": "^1.7.1",
    "postcss-sass-color-functions": "^1.1.0",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "reselect": "^3.0.1",
    "shortid": "^2.2.8",
    "yo-yo": "^1.4.0"
  },
  "browserify": {
    "transform": [
      [
        "browserify-postcss",
        {
          "plugin": [
            "postcss-import",
            "postcss-url",
            "precss",
            "postcss-sass-color-functions",
            [
              "autoprefixer",
              {
                "browsers": [
                  "last 2 versions",
                  "ie 9"
                ]
              }
            ],
            "postcss-reporter",
            "postcss-browser-reporter",
            "cssnano"
          ],
          "inject": true
        }
      ],
      "browserify-shim"
    ]
  },
  "browser": {
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js"
  },
  "browserify-shim": {
    "bootstrap": {
      "depends": [
        "jquery:jQuery"
      ]
    }
  }
}
